{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "MarketPlace"
  },
  "host": "app-market-place.herokuapp.com",
  "tags": [
    {
      "name": "Users",
      "description": "Operações referentes ao usuário."
    },
    {
      "name": "Addresses",
      "description": "Operações referentes ao endereço."
    },
    {
      "name": "Bank Account",
      "description": "Operações referentes aos cartões de credito"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Cadastrar usuário",
        "description": "Cadastra um novo usuário",
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "description": "O usuário a ser criado.",
            "schema": {
              "type": "object",
              "required": [
                "userName"
              ],
              "properties": {
                "first_name": {
                  "type": "string",
                  "example": "Pedro"
                },
                "last_name": {
                  "type": "string",
                  "example": "Santos"
                },
                "cpf": {
                  "type": "string",
                  "example": "45397081043"
                },
                "email": {
                  "type": "string",
                  "example": "algo@dominio.com"
                },
                "password": {
                  "type": "string",
                  "example": "Pedro123"
                },
                "confirm_password": {
                  "type": "string",
                  "example": "Pedro123"
                },
                "birth_date": {
                  "type": "string",
                  "example": "1999-10-25"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso"
          },
          "400": {
            "description": "Ocorreu uma falha"
          }
        }
      }
    },
    "/user/{userId}": {
      "put": {
        "tags": [
          "Users"
        ],
        "summary": "Atualizar usuário",
        "description": "Atualiza um usuário",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "type": "integer",
            "required": true,
            "description": "Identificador do usuário."
          },
          {
            "in": "body",
            "name": "user",
            "description": "O usuário a ser criado.",
            "schema": {
              "type": "object",
              "required": [
                "userName"
              ],
              "properties": {
                "first_name": {
                  "type": "string",
                  "example": "Pedro"
                },
                "last_name": {
                  "type": "string",
                  "example": "Santos"
                },
                "cpf": {
                  "type": "string",
                  "example": "45397081043"
                },
                "email": {
                  "type": "string",
                  "example": "algo@dominio.com"
                },
                "password": {
                  "type": "string",
                  "example": "Pedro123"
                },
                "confirm_password": {
                  "type": "string",
                  "example": "Pedro123"
                },
                "birth_date": {
                  "type": "string",
                  "example": "1999-10-25"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso"
          },
          "400": {
            "description": "Ocorreu uma falha"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      },
      "delete": {
        "tags": [
          "Users"
        ],
        "summary": "Remover usuário",
        "description": "Remove um usuário",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "type": "integer",
            "required": true,
            "description": "Identificador do usuário."
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso"
          },
          "400": {
            "description": "Ocorreu uma falha"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "visualizar usuário",
        "description": "visualiza um usuário",
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "type": "integer",
            "required": true,
            "description": "Identificador do usuário."
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso"
          },
          "400": {
            "description": "Ocorreu uma falha"
          },
          "404": {
            "description": "Usuário não encontrado"
          }
        }
      }
    }
  }
}